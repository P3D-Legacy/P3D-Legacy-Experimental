                                                :when:Yes
                                                    @text.show(Oh, dear.~Sorry, but you*got it wrong.~Please try again!)
                                                    :exit
                                            :endselect
                                        :when:No
                                            @text.show(Oh, dear.~Sorry, but you*got it wrong.~Please try again!)
                                            :exit
                                    :endselect
                                :when:Yes
                                    @text.show(Oh, dear.~Sorry, but you*got it wrong.~Please try again!)
                                    :exit
                        :endselect
                    :when:No
                        @text.show(Oh, dear.~Sorry, but you*got it wrong.~Please try again!)
                        :exit
                :endselect
            :when:No
                @text.show(Oh, dear.~Sorry, but you*got it wrong.~Please try again!)
                :exit
            :endselect
        :when:No
            @text.show(Oh. I see. Please~try if you change~your mind.)
    :endselect
:else
    @text.show(Please tune in to~our radio shows.)
